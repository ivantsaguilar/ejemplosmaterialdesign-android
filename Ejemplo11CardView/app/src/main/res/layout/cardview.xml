<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://scchemas.android.com/apk/res-auto">

    <!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"/>
    -->

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app1:cardCornerRadius="5dp"
        app:cardElevation="40dp"
        app1:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:weightSum="10"
            android:padding="5dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/img1"/>

            <TextView
                android:id="@+id/title"
                android:text="This is the title test"
                style="@style/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:background="#4c1b1b1b"
                android:alpha="0.8"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/twitter"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dicta, qui dolores ipsum libero quod ex totam quia blanditiis id. Ratione necessitatibus odio aperiam amet suscipit voluptates eius, unde nobis autem."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:textSize="15sp"

                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>